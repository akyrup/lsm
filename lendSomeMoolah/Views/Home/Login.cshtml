
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login</h2>
<script>
    logout();
</script>


    <div class="form-group">
        <label for="email">Email address:</label>
        <input type="text" class="form-control" placeholder="Enter username" id="username">
    </div>
    <div class="form-group">
        <label for="pwd">Password:</label>
        <input type="password" class="form-control" placeholder="Enter password" id="password">
    </div>
    <div class="form-group">
        <label for="rol">Role:</label>
        <input class="form-check-input" type="radio" id="Lender" name="role" value="Lender"> Lender
        <input class="form-check-input" type="radio" id="Borrower" name="role" value="Borrower"> Borrower
    </div>
    <div class="form-group form-check">
        <label class="form-check-label">
            <input class="form-check-input" type="checkbox"> Remember me
        </label>
    </div>

    <button type="button" class="btn btn-primary" onclick="callStateLessLogin()">Submit</button>

